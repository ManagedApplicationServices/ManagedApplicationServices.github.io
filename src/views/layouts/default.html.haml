%html
  %head
    %title Managed Application Services :: Ricoh (Singapore) Pte Ltd - Agile software development, Cloud computing, DevOps, Ruby, Rails, Node.JS, Raspberry Pi, AWS
    %link{href: "assets/bootstrap.css?body=1", media: "all", rel: "stylesheet"}/
    %link{href: "assets/font-awesome.min.css?body=1", media: "all", rel: "stylesheet"}/
    %link{href: "assets/main.css?body=1", media: "all", rel: "stylesheet"}/
    %script{src: "assets/jquery.js?body=1"}
    %script{src: "assets/Chart.js?body=1"}
    %script{src: "assets/bootstrap.js?body=1"}
    %script{src: "assets/classie.js?body=1"}
    %script{src: "assets/main.js?body=1"}
    %script{src: "assets/smoothscroll.js?body=1"}
  %body{"data-offset" => "0", "data-spy" => "scroll", "data-target" => "#theMenu"}
    %nav#theMenu.menu
      .menu-wrap
        %h1.logo
          %a{href: "index.html#home"} Minimal
        %i.icon-remove.menu-close
        %a.smoothScroll{href: "#home"} Home
        %a.smoothScroll{href: "#about"} About
        %a.smoothScroll{href: "#portfolio"} Portfolio
        %a.smoothScroll{href: "#contact"} Contact
        %a{href: "#"}
          %i.icon-facebook
        %a{href: "#"}
          %i.icon-twitter
        %a{href: "#"}
          %i.icon-dribbble
        %a{href: "#"}
          %i.icon-envelope
      #menuToggle
        %i.icon-reorder
    =yield
    :javascript
      $('#menuToggle, .menu-close').on('click', function(){
          $('#menuToggle').toggleClass('active');
          $('body').toggleClass('body-push-toleft');
          $('#theMenu').toggleClass('menu-open');
      });